# Legal Lens Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Firebase Configuration
FIREBASE_ADMIN_CREDENTIAL=firebase-admin.json

# Database Configuration
DATABASE_URL=sqlite:///./legal_lens.db
# For PostgreSQL: postgresql://postgres:password@localhost:5432/legal_lens

# Server Configuration
HOST=0.0.0.0
PORT=8000

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# Firebase Configuration
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your_project_id
REACT_APP_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
REACT_APP_FIREBASE_APP_ID=your_app_id

# Backend API URL
REACT_APP_API_URL=http://localhost:8000

# =============================================================================
# DOCKER CONFIGURATION (for docker-compose)
# =============================================================================

# Database (for Docker)
POSTGRES_DB=legal_lens
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Redis (optional)
REDIS_URL=redis://redis:6379

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Debug mode
DEBUG=true

# Log level
LOG_LEVEL=INFO

# CORS settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# File upload settings
MAX_FILE_SIZE=5242880  # 5MB in bytes
ALLOWED_EXTENSIONS=pdf

# =============================================================================
# TESTING CONFIGURATION
# =============================================================================

# Test database
TEST_DATABASE_URL=sqlite:///./test_legal_lens.db

# Test OpenAI key (use a test key for testing)
TEST_OPENAI_API_KEY=your_test_openai_api_key_here

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Production settings (uncomment for production)
# DEBUG=false
# LOG_LEVEL=WARNING
# CORS_ORIGINS=https://yourdomain.com

# SSL/TLS settings
# SSL_CERT_FILE=/path/to/cert.pem
# SSL_KEY_FILE=/path/to/key.pem

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Sentry (optional)
# SENTRY_DSN=your_sentry_dsn_here

# Logging
LOG_FILE=logs/legal_lens.log
LOG_FORMAT=json

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Secret key for JWT (if using JWT)
SECRET_KEY=your_secret_key_here

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================

# OpenAI model settings
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Vector store settings
VECTOR_STORE_PATH=./vector_store
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# =============================================================================
# OCR CONFIGURATION
# =============================================================================

# Tesseract settings
TESSERACT_LANG=eng
TESSERACT_CONFIG=--psm 6

# Image processing
IMAGE_DPI=300
IMAGE_FORMAT=png 